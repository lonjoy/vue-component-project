{
  "prompts": {
    "name": {
      "type": "string",
      "required": true,
      "label": "vue-component name \n example: vue-tinymce, vue-input, vue-qiniu-upload"
    },
    "description": {
      "type": "string",
      "required": true,
      "label": "Project description",
      "default": "A vue component project!"
    },
    "author": {
      "type": "string",
      "label": "Author"
    },
    "output": {
      "type": "string",
      "required": true,
      "label": "output folder name",
      "default": "dist"
    },
    "sass": {
       "type": "confirm",
       "message": "Use sass?",
       "default": false
    },
    "json-server": {
       "type": "confirm",
       "message": "Use json-server?",
       "default": false
    }
  },
  "completeMessage": "{{#inPlace}}To get started:\n\n  npm install\n  npm run dev \n  npm run hot.{{else}}To get started:\n\n  cd {{destDirName}}\n  npm install\n  npm run dev \n  npm run hot.{{/inPlace}}"
}
